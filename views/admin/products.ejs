                                                                        <button type="button"
                                                                            onclick="removeOffer('<%= product._id %>')"
                                                                            class="remove-btn">
                                                                            Remove
                                                                        </button><br>
                                                                        <p>₹<%= product.offer.discountAmount %>% offer
                                                                        </p>
                                                                        <% } else { %>
                                                                            <button type="button"
                                                                                onclick="passId('<%= product._id %>')"
                                                                                class="offer-btn" data-bs-toggle="modal"
                                                                                data-bs-target="#offerModal">
                                                                                Apply
                                                                            </button>
                                                                            <% } %>
                                                            </td>
                                                            <td><a
                                                                    href="/admin/editproducts?id=<%= product._id %>">edit</a>
                                                            </td>
                                                            <td>
                                                                <% if (product.is_blocked) { %>
                                                                    <a class="unblock-user"
                                                                        data-user-id="<%= product._id %>"><span
                                                                            class="badge rounded-pill alert-success">unblock</span></a>
                                                                    <% } else { %>
                                                                        <a class="block-user"
                                                                            data-user-id="<%= product._id %>"><span
                                                                                class="badge rounded-pill alert-warning">block</span></a>
                                                                        <% } %>
                                                            </td>
                                                    </tr>
                                                    <% }) %>
