    <script>
        let categoryId
        function passCategoryId(id){
            console.log(id,'id');
            categoryId = id
        }
        function applyCategoryOffer(id) {
                    $.ajax({
                        url: `/admin/applycategoryoffer`,
                        method: 'PATCH',
                        data: { id,categoryId  },
                        success: function(response) {

                            if (response.success) {
                                $('#offerModal').modal('hide');
                                location.reload()
                            } else {
                                Swal.fire('Error', 'Error adding offer.', 'error');
                            }
                        },
                        error: function(error) {
                            console.log(error);
                        }
                    });
                }
    </script>

<script>
            function removeCategoryOffer(id) {
            console.log(id);
                    $.ajax({
                        url: `/admin/removecategoryoffer`,
                        method: 'PATCH',
                        data: {id},
                        success: function(response) {

                            if (response.success) {
                                location.reload()
                            } else {
                                Swal.fire('Error', 'Error adding offer.', 'error');
                            }
                        },
                        error: function(error) {
                            console.log(error);
                        }
                    });
                }
</script>
 


    <script>
        document.querySelectorAll('.block-user, .unblock-user').forEach(function (element) {
            console.log(element);
            element.addEventListener('click', function (event) {
                event.preventDefault();

                const userId = element.getAttribute('data-user-id');
                const action = element.classList.contains('block-user') ? 'block' : 'unblock';

                fetch(`/admin/blockcategory/${userId}`, {
                    method: 'PATCH',
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.block === true) {
                            //updating the button text and color
                            element.querySelector('span').classList.toggle('alert-success');
                            element.querySelector('span').classList.toggle('alert-warning');
                            element.querySelector('span').innerText = action === 'block' ? 'unblock' : 'block';

                            // Replace button class
                            element.classList.remove(action === 'block' ? 'block-user' : 'unblock-user');
                            element.classList.add(action === 'block' ? 'unblock-user' : 'block-user');
                        }
                    }).catch((error) => {
                        console.log(error.message);
                    })

            });
        });
    </script>


