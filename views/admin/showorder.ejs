                                                    <td>
                                                        <a class="itemside">
                                                            <div class="left">
                                                                <img src="/sharpimages/<%= product.productId.images.image1 %>" width="40" height="40" class="img-xs" alt="Item" />
                                                            </div>
                                                            <td><div class="info"><%= product.productId.name %></div></td>
                                                        </a>
                                                    </td>
                                                    <td><%= product.productId.price %></td>
                                                    <td><%= product.quantity %></td>
                                                    <td><%= product.totalPrice %></td>
                                                    <td>
                                                        <select class="statusSelect" id="<%=orderData._id%><%=product._id%>" onchange="status('<%=orderData._id%>', '<%=product._id%>')">
