<!-- Checkout Section Start -->
<div class="section section-padding">
    <div class="container">
        <div class="checkout-info">
            <p class="info-header">
                <i class="fa fa-exclamation-circle"></i> Have a coupon?
                <a data-bs-toggle="collapse" href="#coupon">Click here to enter your code</a>
            </p>
            <%console.log(coupons)%>
            <div class="collapse" id="coupon">
                <div class="card-body" id="reloadDiv">
                    <div class="row">
                        <% for (let i = 0; i < coupons.length; i++) { %>
                            <div class="col-lg-3 mb-4">
                                <div class="card coupon-card">
                                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                                        <i class="fa fa-gift" aria-hidden="true"></i>
                                        <h5 class="coupon-tag"><%= coupons[i].name %></h5>
                                        <p class="coupon-text">
                                            Code: <%= coupons[i].couponCode %> <br>
                                            Discount Amount: <b> ₹<%= coupons[i].discountAmount %> </b> <br>
                                            Only applicable if you <br> order above <b> ₹<%=coupons[i].criteriaAmount%></b>
                                        </p>
                                        <% if(subtotal>coupons[i].criteriaAmount) {%>
                                            <% console.log('Coupon ID:', coupons[i]._id, 'Applied Coupon ID:', cartData.couponDiscount ? cartData.couponDiscount._id : 'No Coupon Applied') %>
                                            <% if (discountAmount && coupons[i]._id.toString() !== (cartData.couponDiscount ? cartData.couponDiscount._id.toString() : null)) { %>
                                                <button type="submit" onclick="applyCoupon('<%=coupons[i]._id%>')" class="apply-btn btn btn-primary">
                                                    <span> Apply</span>
                                                </button>
                                            <% } else if (cartData.couponDiscount && coupons[i]._id.toString() === (cartData.couponDiscount._id ? cartData.couponDiscount._id.toString() : null)) { %>
                                                <button type="submit" onclick="removeCoupon('<%=coupons[i]._id%>')" class="apply-btn btn btn-danger">
                                                    <span> Remove</span>
                                                </button>
                                            <% } %>
                                        <% } else { %>
                                            <span class="badge not-applicable">Not Applicable</span>
                                        <%}%>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
        </div>

                                <form id="form">
                                    <div class="row">
                                        <div class="col-lg-7">
                                        <% if (address && address.address && address.address.length > 0) { %>
