                                                                Address: <%= address.address %><br>
                                                                Landmark: <%= address.landmark %><br>
                                                                State: <%= address.state %><br>
                                                                City: <%= address.city %><br>
                                                                Pincode: <%= address.pincode %><br>
                                                                Phone: <%= address.phone %><br>
                                                                Email: <%= address.email %><br>
