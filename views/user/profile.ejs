                            <div class="modal-content">
                                <span class="close" id="closeModal">&times;</span>
                                <h4 class="account-title">Add Address</h4>
                                <!-- Your form goes here -->
                                <form id="myForm" action='/addressform' method="post" onsubmit="return validateForm()">
