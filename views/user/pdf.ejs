<!-- orderInvoice.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Invoice</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        h1 {
            color: #333;
        }
    </style>
</head>
<body>
    <h1>Order Invoice</h1>
    <%=orderData.productId.name%>
    
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < orderData.products.length; i++) { %>
                <tr>
                    <td><%= orderData.products[i].productName %></td>
                    <td><%= orderData.products[i].quantity %></td>
                    <td>$<%= orderData.products[i].price %></td>
                    <td>$<%= orderData.products[i].totalPrice %></td>
                    <td><%= orderData.products[i].productStatus %></td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <p><strong>Delivery Address:</strong></p>
    <p><%= orderData.delivery_address.name %></p>
    <p><%= orderData.delivery_address.address %>, <%= orderData.delivery_address.city %>, <%= orderData.delivery_address.state %> - <%= orderData.delivery_address.pincode %></p>
    <p>Email: <%= orderData.delivery_address.email %></p>

    <p><strong>Payment Method:</strong> <%= orderData.payment %></p>

    <p><strong>Order Status:</strong> <%= orderData.orderStatus %></p>
    <p><strong>Order Date:</strong> <%= orderData.orderDate.toDateString() %></p>

    <h2>Total: $<%= orderData.subtotal %></h2>
</body>
</html>